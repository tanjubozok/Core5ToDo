@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        @if (ViewBag.TamamlananGorevSayisi > 0)
                        {
                            <h3>@ViewBag.TamamlananGorevSayisi</h3>
                        }
                        else
                        {
                            <h3>0</h3>
                        }
                        <p>Tamamladığınız Görev Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        İncele
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        @if (ViewBag.TamamlanmasiGerekenGorevSayisi > 0)
                        {
                            <h3>@ViewBag.TamamlanmasiGerekenGorevSayisi</h3>
                        }
                        else
                        {
                            <h3>0</h3>
                        }
                        <p>amamlamanız Gereken Görev Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        @if (ViewBag.OkunmamisBildirimSayisi > 0)
                        {
                            <h3>@ViewBag.OkunmamisBildirimSayisi</h3>
                        }
                        else
                        {
                            <h3>0</h3>
                        }
                        <p>Okumadığınız Bildirimler</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        @if (ViewBag.RaporSayisi > 0)
                        {
                            <h3>@ViewBag.RaporSayisi</h3>
                        }
                        else
                        {
                            <h3>0</h3>
                        }
                        <p>Yazdığınız Rapor Sayısı</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>

        </div>
    </div>
</section>
