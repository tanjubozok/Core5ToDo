@model GorevGuncelleViewModel

@{
    ViewData["Title"] = "Görev Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section JqueryValidation{
<script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Görev Güncelle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-action="Index" asp-controller="Home">
                            <i class="fas fa-home"></i>
                            Anasayfa
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-action="ListeGorev" asp-controller="Gorev">
                            <i class="fas fa-clipboard-list"></i>
                            Görev Listesi
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Görev Güncelle</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="card">
        <form asp-area="Admin" asp-action="GuncelleGorev" asp-controller="Gorev" method="post">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-clipboard-list"></i>
                    Görev Güncelle
                </h3>
            </div>
            <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Ad"></label>
                    <input type="text" class="form-control" asp-for="Ad" placeholder="ad" maxlength=200>
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Aciklama"></label>
                    <textarea type="text" class="form-control" asp-for="Aciklama" placeholder="açıklama"></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AciliyetId"></label>
                    <select asp-for="AciliyetId" asp-items="@ViewBag.Aciliyetler" class="form-control select2" style="width: 100%;">
                        <option value="-1" hidden>Seçiniz</option>
                    </select>
                    <span asp-validation-for="AciliyetId" class="text-danger"></span>
                </div>

            </div>
            <div class="card-footer">
                <a asp-area="Admin" asp-action="ListeGorev" asp-controller="Gorev" class="btn btn-dark btn-flat">
                    <i class="fas fa-undo"></i>
                    Listeye Geri Dön
                </a>
                <button type="submit" class="btn btn-success float-right btn-flat">
                    <i class="fas fa-check-circle"></i>
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</section>