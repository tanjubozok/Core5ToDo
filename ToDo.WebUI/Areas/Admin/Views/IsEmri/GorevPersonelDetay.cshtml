@model GorevListAllViewModel

@{
    ViewData["Title"] = "Personel Görev Detay";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Personel Görev Detay</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-action="Index" asp-controller="Home">
                            <i class="fas fa-home"></i>
                            Anasayfa
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Personel Görev Detay</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <p>
                    <a class="btn btn-success btn-flat">
                        <i class="fas fa-file-excel"></i>
                        Excel İndir
                    </a>
                </p>

                @if (Model.Raporlar.Count > 0)
                {
                    <div class="card">
                        <div class="card-header">
                            <strong>@Model.AppUser.Name @Model.AppUser.SurName</strong> personelinizin <strong>@Model.Ad</strong> görevine yazmış olduğu raporlar
                        </div>
                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-bordered table-hover table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th class="col-3">Tanım</th>
                                        <th>Detay</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Raporlar)
                                    {
                                        <tr>
                                            <td>@item.Tanim</td>
                                            <td>@item.Detay</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5>
                            <i class="icon fas fa-exclamation-triangle"></i>
                        </h5>
                        Sistemde kayıtlı bir rapor bulunamadı.
                    </div>
                }
            </div>
        </div>
    </div>
</section>