@model List<BildirimListViewModel>

@{
    ViewData["Title"] = "Aciliyet Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Bildirim Listesi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-action="Index" asp-controller="Home">
                            <i class="fas fa-home"></i>
                            Anasayfa
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Bildirim Listesi</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                @if (Model.Count > 0)
                {
                    <p>
                        <a asp-controller="Bildirim" asp-action="HepsiniTamamla" class="btn btn-success btn-flat">
                            <i class="fas fa-clipboard-check"></i>
                            Hepsini Okundu Olarak İşaretle
                        </a>
                    </p>

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-info-bell"></i>
                                Bildirim Listesi
                            </h3>
                        </div>
                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-bordered table-hover table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th>Açıklama</th>
                                        <th class="col-1 text-center">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Aciklama</td>
                                            <td class="text-center">
                                                <form asp-area="Admin" asp-action="List" asp-controller="Bildirim" method="post">

                                                    <input type="hidden" name="id" value="@item.Id" />

                                                    <button type="submit" class="btn btn-success btn-flat">
                                                        <i class="fas fa-clipboard-check"></i>
                                                        Okundu
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5>
                            <i class="icon fas fa-exclamation-triangle"></i>
                        </h5>
                        Bildirim bulunamdı.
                    </div>
                }
            </div>
        </div>
    </div>
</section>