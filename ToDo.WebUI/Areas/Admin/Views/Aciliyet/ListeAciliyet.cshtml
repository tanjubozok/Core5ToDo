@model List<AciliyetListDto>

@{
    ViewData["Title"] = "Aciliyet Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Aciliyet Listesi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-action="Index" asp-controller="Home">
                            <i class="fas fa-home"></i>
                            Anasayfa
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Aciliyet Listesi</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <p>
                    <a asp-area="Admin" asp-action="EkleAciliyet" asp-controller="Aciliyet" class="btn btn-primary btn-flat">
                        <i class="fas fa-info-circle"></i>
                        Aciliyet Ekle
                    </a>
                </p>

                @if (Model.Count > 0)
                {
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-info-circle"></i>
                                Aciliyet Listesi
                            </h3>
                        </div>
                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-bordered table-hover table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th class="col-1 text-center">ID</th>
                                        <th>Tanım</th>
                                        <th class="col-2 text-center">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">#@item.Id</td>
                                            <td>@item.Tanim</td>
                                            <td class="text-center">
                                                <a asp-area="Admin" asp-action="GuncelleAciliyet" asp-controller="Aciliyet" asp-route-id="@item.Id" class="btn btn-warning btn-flat">
                                                    <i class="fas fa-edit"></i>
                                                    Düzenle
                                                </a>
                                                <a class="btn btn-danger btn-flat">
                                                    <i class="fas fa-trash"></i>
                                                    Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h5>
                            <i class="icon fas fa-exclamation-triangle"></i>
                        </h5>
                        Sistemde kayıtlı bir aciliyet bulunamadı.
                    </div>
                }
            </div>
        </div>
    </div>
</section>